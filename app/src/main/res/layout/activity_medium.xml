<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.wordsquiz.MediumActivity"
    android:background="@drawable/game">

    <TextView
        android:id="@+id/word_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:text="WORDS"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/edit_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word_medium"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="20sp"
        android:text="word"/>

    <Button
        android:id="@+id/check_med"
        android:layout_width="247sp"
        android:layout_height="70sp"
        android:background="@drawable/buttons"
        android:shadowColor="#212121"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="12"
        android:text="CHECK"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_med"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/newGame_med"
        android:layout_width="247sp"
        android:layout_height="70sp"
        android:background="@drawable/buttons"
        android:shadowColor="#212121"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="12"
        android:text="NEW GAME"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/check_med"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
